<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>BancaServlet</display-name>
 
  <!-- Database connection -->
  <context-param>
		<param-name>dbUrl</param-name>
		<param-value>jdbc:mysql://localhost:3306/banca?serverTimezone=UTC</param-value>
	</context-param>
	<context-param>
		<param-name>dbUser</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>dbPassword</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>dbDriver</param-name>
		<param-value>com.mysql.cj.jdbc.Driver</param-value>
	</context-param> 
	
	<!-- Servlets -->
	<servlet>
  		<servlet-name>login</servlet-name>
  		<servlet-class>it.polimi.tiw.bancaservlet.controllers.LogIn</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>logout</servlet-name>
  		<servlet-class>it.polimi.tiw.bancaservlet.controllers.Logout</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>home</servlet-name>
  		<servlet-class>it.polimi.tiw.bancaservlet.controllers.Home</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>register</servlet-name>
  		<servlet-class>it.polimi.tiw.bancaservlet.controllers.Register</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>dettagliconto</servlet-name>
  		<servlet-class>it.polimi.tiw.bancaservlet.controllers.DettagliConto</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>aggiungiconto</servlet-name>
  		<servlet-class>it.polimi.tiw.bancaservlet.controllers.AggiungiConto</servlet-class>
  	</servlet>
  	
  	<servlet>
  		<servlet-name>dotransaction</servlet-name>
  		<servlet-class>it.polimi.tiw.bancaservlet.controllers.doTransaction</servlet-class>
  	</servlet>
  	
  	<!-- Servlets mapping -->
	<servlet-mapping>
  		<servlet-name>login</servlet-name>
  		<url-pattern>/login</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>logout</servlet-name>
  		<url-pattern>/logout</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>home</servlet-name>
  		<url-pattern>/home</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>register</servlet-name>
  		<url-pattern>/register</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>dettagliconto</servlet-name>
  		<url-pattern>/dettagliconto</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>aggiungiconto</servlet-name>
  		<url-pattern>/aggiungiconto</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>dotransaction</servlet-name>
  		<url-pattern>/dotransaction</url-pattern>
  	</servlet-mapping>
	
	<!-- Filters -->
	<filter>
		<filter-name>Checker</filter-name>
		<filter-class>it.polimi.tiw.bancaservlet.filters.Checker</filter-class>
	</filter>
	
	<!-- Filters mapping-->
	<filter-mapping>
		<filter-name>Checker</filter-name>
		<url-pattern>/aggiungiconto</url-pattern>
		<url-pattern>/home</url-pattern>
		<url-pattern>/dettagliconto</url-pattern>
		<url-pattern>/dotransaction</url-pattern>
	</filter-mapping>
	
	<welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>